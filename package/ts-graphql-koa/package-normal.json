{
  "name": "graphql-api",
  "version": "0.0.0",
  "description": "A sample graphql api",
  "main": "dist/main.js",
  "engines": {
    "node": "8.x"
  },
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint": "tslint --project ./tsconfig.json '{src,tests}/**/*.{js,ts}'",
    "prettify": "prettier --write --single-quote --trailing-comma all --loglevel silent \"{src,tests}/**/*.{js,ts}\"",
    "precommit": "npm run prettify && npm run lint && npm test",
    "start": "npm run build && node dist/main.js",
    "start:watch": "concurrently \"npm run build:watch\" \"node-dev dist/main.js\""
  },
  "author": "bk-cli",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "@types/graphql": "14.0.2",
    "apollo-server-koa": "2.1.0",
    "body-parser": "1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "2.5.3",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.5.1",
    "koa-logger": "^3.2.0",
    "log4js": "^3.0.5",
    "merge-graphql-schemas": "1.5.3",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.0.1",
    "husky": "^1.0.0-rc.15",
    "node-dev": "^3.1.3",
    "prettier": "1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.1",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-": "npm run precommit",
      "pre-push": "npm run prettify && npm run lint",
      "pre-rebase": "npm run prettify && npm run lint"
    }
  }
}
